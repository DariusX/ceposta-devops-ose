{
  "kind": "List",
  "apiVersion": "v1beta3",
  "items": [
    {
      "kind": "Service",
      "apiVersion": "v1beta3",
      "metadata": {
        "name": "gerrit-service"
      },
      "spec": {
        "ports": [
          {
            "name": "http",
            "port": 80,
            "targetPort": 8080
          },
          {
            "name":"ssh",
            "port": 29418,
            "targetPort": 29418
          }
        ],
        "selector": {
          "name": "gerrit"
        }
      }
    },
    {
      "kind": "ReplicationController",
      "apiVersion": "v1beta3",
      "metadata": {
        "labels": {
          "component": "gerrit"
        },
        "name": "gerrit-controller"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "component": "gerrit"
        },
        "template": {
          "metadata": {
            "labels": {
              "component": "gerrit"
            }
          },
          "spec": {
            "containers": [
              {
                "env" : [ {
                  "name" : "AUTH_TYPE",
                  "value" : "OpenID"
                }, {
                  "name" : "GITLAB_PROJ_ROOT",
                  "value" : "root"
                }, {
                  "name" : "GITLAB_PORT_80_TCP_ADDR",
                  "value" : ""
                }, {
                  "name" : "GITLAB_USER",
                  "value" : "root"
                }, {
                  "name" : "GITLAB_PASSWORD",
                  "value" : "redhat01"
                } ],
                "image": "172.30.137.241/fabric8/gerrit:1.0",
                "name": "gerrit-container",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 29418,
                    "protocol": "TCP"
                  }
                ],
                "imagePullPolicy": "IfNotPresent"
              }
            ]
          }
        }
      }
    }
  ]
}